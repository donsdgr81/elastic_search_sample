<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Job title</th>
      <th>Salary</th>
      <th>Company</th>
      <th>Skill</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
    <tr>
      <td><%= job.job_title %></td>
      <td><%= job.salary %></td>
      <td><%= job.company %></td>
      <td><%= job.skill %></td>
      <td><%= job.description %></td>
      <td><%= link_to 'Show', job %></td>
      <td><%= link_to 'Edit', edit_job_path(job) %></td>
      <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= will_paginate @jobs %>

<%= link_to 'New Job', new_job_path %>
